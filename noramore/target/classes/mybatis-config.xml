<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE configuration PUBLIC
"-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 마이바티스는 sql 구문에 사용되는 값이 null 이면 에러 발생함,
		null 을 사용할 수 있게 하려면 아래의 설정을 추가함
	 -->
	 <settings>
	 	<setting name="jdbcTypeForNull" value="NULL" />
	 	<setting name="cacheEnabled" value="false" />
	 </settings>

	<!-- 존재하지 않는 클래스와 매퍼파일을 먼저 등록 설정하면 톰켓 구동 안함 : 에러 발생함 -->
	<typeAliases>			
		<!-- <typeAlias type="com.develup.noramore.폴더이름.클래스이름" alias="" /> ************************************************ -->	  
	</typeAliases>
	 
	<mappers>
		<!-- <mapper resource="mappers/board-mapper.xml" /> 이와같이 mappers 안에 mapper 폴더 만들고 여기에 지정 -->
	</mappers>
</configuration>
